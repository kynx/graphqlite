{
    "name": "kynx/graphqlite",
    "description": "Talk to embedded GraphQLite database",
    "type": "library",
    "license": "MIT",
    "keywords": ["graphqlite", "graph database", "graph", "database", "sqlite"],
    "autoload": {
        "psr-4": {
            "Kynx\\GraphQLite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KynxTest\\GraphQLite\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Matt Kynaston",
            "email": "matt@kynx.org"
        }
    ],
    "require": {
        "php": "^8.4.0 || ^8.5.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^3.1",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^13.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "phpstan analyse",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always"
    }
}
